          a(href='/home')
            img(src='images/logo2.png', alt='')
  
    .gallery
      .container
      each d in data
        .col-sm-3(style='margin-bottom: 1.5em')
          figure.imghvr-push-up
              img(src='images/#{d.file}', alt='example-image.png', style='height:100px;')
              figcaption
                h6 #{d.name}
                h6 #{d.doj}
              a(href='/viewprofile')
